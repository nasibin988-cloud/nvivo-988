{
  "name": "functions",
  "version": "1.0.0",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc && npm run copy-json",
    "copy-json": "cp -r src/domains/nutrition/data/*.json lib/domains/nutrition/data/ 2>/dev/null || true",
    "serve": "npm run build && firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0",
    "openai": "^4.47.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  }
}
